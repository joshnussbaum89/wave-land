---
import Layout from '../layouts/Layout.astro'
import SiteCta from '../components/SiteCta.astro'
---

<Layout
  title="Wave Land Web | 404"
  description="404 - Page not found. The page you are looking for does not exist."
>
  <header class="header">
    <div class="header-info">
      <h1>404</h1>
      <p>Oops! The page you are looking for does not exist.</p>
      <SiteCta url="/" text="← Back to site" />
    </div>
  </header>
</Layout>

<style>
  .header p {
    margin-bottom: 1rem;
    font-size: clamp(var(--size-sm), 4vw, var(--size-base));
  }
</style>
