---
import Layout from '../layouts/Layout.astro'
import ScrollingNavigation from '../components/ScrollingNavigation.astro'
import Hero from '../components/sections/Hero.astro'
import Introduction from '../components/sections/Introduction.astro'
import About from '../components/sections/About.astro'
import Portfolio from '../components/sections/Portfolio.astro'
import Faq from '../components/sections/Faq.astro'
import RecentPosts from '../components/sections/RecentPosts.astro'

const sections = [
  { name: 'Top', id: '#top' },
  { name: 'Introduction', id: '#introduction' },
  { name: 'About', id: '#about' },
  { name: 'Portfolio', id: '#portfolio' },
  { name: 'FAQ', id: '#faq' },
]
---

<Layout
  title="Wave Land Web | Creative Web Design & Development"
  description="Wave Land Web is a web design and development agency based in Madison, WI. We specialize in building beautifully responsive, user-focused websites for creatives and small businesses."
>
  <ScrollingNavigation sections={sections} />
  <Hero />
  <main>
    <Introduction />
    <About />
    <Portfolio />
    <Faq />
    <RecentPosts />
  </main>
</Layout>
