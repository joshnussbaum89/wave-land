---
import SubscribeForm from '../forms/Subscribe.astro'
import SocialIcons from '../SocialIcons.astro'
---

<footer id="footer" class="footer">
  <div class="wrapper">
    <div class="footer-section">
      <h3>Sign Up To Receive Updates From Wave Land Web</h3>
      <SubscribeForm formId="footer-subscribe" theme="dark" />
    </div>

    <div class="footer-section">
      <h3>Sitemap</h3>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/#portfolio">Portfolio</a></li>
        <li><a href="/blog">Blog</a></li>
        <li><a href="/contact">Contact</a></li>
      </ul>
    </div>

    <div class="footer-section">
      <h3>Contact</h3>
      <ul>
        <li>Madison, WI</li>
        <li>Mon-Fri 9am-5pm</li>
        <li>josh@wavelandweb.com</li>
      </ul>
      <SocialIcons />
    </div>
  </div>

  <div class="copyright">
    <p>wavelandweb.com Â© {new Date().getFullYear()}</p>
  </div>
</footer>

<style>
  .footer {
    position: relative;
    left: 0;
    right: 0;
    bottom: 0;
    max-width: calc(100% - 2rem);
    margin: 0 auto;
    padding: 4rem 1rem 1rem;
    color: var(--color-foreground);
    border-top: 1px dashed var(--color-secondary-200);

    @media (min-width: 768px) {
      & {
        position: fixed;
      }
    }

    & .wrapper {
      display: grid;
      grid-template-columns: 1fr;
      gap: var(--section-spacing-base);
      margin: 0 auto 4rem;
      max-width: var(--max-width);

      @media (min-width: 768px) {
        & {
          grid-template-columns: repeat(2, 1fr);
        }
      }

      @media (min-width: 1024px) {
        & {
          grid-template-columns: repeat(3, 1fr);
        }
      }
    }

    & .copyright {
      padding: 1rem;
      text-align: center;

      & p {
        font-size: var(--size-xs);
        color: var(--color-grey-100);
      }
    }
  }

  .footer-section {
    display: flex;
    flex-direction: column;
    gap: 1rem;

    &:first-of-type h3 {
      margin-bottom: 2rem;
    }

    &:not(:first-of-type) h3 {
      font-size: var(--size-base);
    }

    & ul {
      font-size: var(--size-xs);
    }

    & li {
      margin-bottom: 0.5rem;
    }

    & a:hover {
      color: var(--color-secondary-200);
    }
  }
</style>
