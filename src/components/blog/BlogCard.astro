---
import { Picture } from 'astro:assets'

export interface Props {
  slug: string
  title: string
  published: string
  image: ImageMetadata
  imageAlt: string
}

const { slug, title, published, image, imageAlt } = Astro.props
---

<article class="card">
  <a href={slug}>
    <Picture src={image} formats={['avif', 'webp']} alt={imageAlt} />
  </a>
  <div class="card-info">
    <p>{published}</p>
    <h2><a class="site-link" href={slug}>{title}</a></h2>
  </div>
</article>

<style>
  .card {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;

    @media (min-width: 768px) {
      & {
        flex-direction: column;
        justify-content: flex-start;
      }
    }

    & a {
      display: block;
      width: 50%;
      height: 100%;
      max-height: 150px;
    }

    & img {
      border-radius: 10px;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }

  .card-info {
    width: 50%;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding: 0.5rem;

    & h2 {
      font-size: var(--size-xs);
      text-align: left;
    }

    @media (min-width: 768px) {
      & h2 {
        font-size: var(--size-sm);
      }
    }

    & p {
      font-size: var(--size-xxs);
      color: var(--color-grey-300);
    }
  }

  @media (min-width: 768px) {
    .card a,
    .card-info {
      width: 100%;
      padding: 0.5rem 0;
    }
  }
</style>
