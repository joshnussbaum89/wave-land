---
import Layout from './Layout.astro'

const { frontmatter } = Astro.props
---

<Layout
  title={`Wave Land Web | ${frontmatter.title}`}
  description={frontmatter.description}
  socialImage={frontmatter.socialImage}
>
  <main id="blog-layout" class="blog-layout">
    <slot />
  </main>
</Layout>

<style is:inline>
  .blog-layout {
    max-width: var(--max-width-small);
    text-align: left;

    & header {
      margin-bottom: 0;
      border-bottom: 1px dashed var(--color-grey-200);

      & img {
        margin: 0 auto 3rem;
      }

      @media (min-width: 768px) {
        & img {
          margin: 0 auto 4rem;
        }
      }

      & p {
        color: var(--color-grey-200);
      }
    }

    & pre {
      margin: 2rem auto;
      padding: 1rem;
      border-radius: var(--border-radius-image);
    }

    @media (min-width: 768px) {
      & pre {
        margin: 2.5rem auto 2.5rem;
        padding: 2rem;
      }
    }

    & img {
      margin: 2rem auto;
      border-radius: var(--border-radius-image);
    }

    @media (min-width: 768px) {
      & img {
        margin: 2.5rem auto;
      }
    }

    & img.small {
      max-width: 450px;
      margin-left: initial;
    }

    & h2 {
      text-decoration: underline;
      text-decoration-color: var(--color-primary-200);
      text-decoration-thickness: 2px;
    }

    & h2,
    & h3 {
      margin: 3rem 0 1rem;
    }

    @media (min-width: 768px) {
      & h2 {
        margin: 4rem 0 2rem;
      }
    }

    @media (min-width: 768px) {
      & h3 {
        margin: 4rem 0 1.5rem;
      }
    }

    & ul,
    & ol {
      padding-inline-start: 3rem;
    }

    & li {
      margin-bottom: 1rem;
    }

    & ul li {
      list-style-type: disc;
    }

    & ol li {
      list-style-type: decimal;
    }

    & p,
    & li {
      margin-bottom: 1rem;
    }

    @media (min-width: 768px) {
      & p,
      & li {
        margin-bottom: 1.5rem;
      }
    }

    & em {
      font-style: italic;
    }

    & strong {
      font-weight: bold;
    }

    & p code {
      padding: 0.1rem 0.3rem 0.2rem;
      white-space: nowrap;
      box-decoration-break: clone;
      background: var(--color-grey-transparent);
      border-radius: 0.25rem;
    }
  }
</style>
