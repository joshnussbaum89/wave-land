---
import { Icon } from 'astro-icon'
import SiteCta from '../SiteCta.astro'
import RotatingTitles from '../animations/RotatingTitles.astro'
---

<header id="hero" class="hero site-section">
  <div class="header-info aol-fade">
    <Icon name="title" />
    <p>
      We help <RotatingTitles /> build meaningful connections with personalized websites that foster
      digital growth without tech stress
    </p>
    <SiteCta
      text="Free Strategy Call"
      url="https://calendly.com/wavelandweb/15-min-meeting?month=2024-04"
      openInNewTab={true}
    />
  </div>
</header>

<style>
  .hero {
    min-height: calc(100vh - 12rem);
    margin: 0 auto;

    & .header-info {
      max-width: 40rem;
    }

    & p {
      position: relative;
      margin-bottom: 1rem;
      font-size: clamp(var(--size-sm), 4vw, var(--size-base));

      &::before {
        position: absolute;
        content: '';
        top: 0;
        left: 0;
        z-index: -1;
        width: 100%;
        height: 100%;
        background: var(--color-white);
        opacity: 0.75;
        border-radius: var(--border-radius-image);
        filter: blur(0.5rem);
      }
    }
  }
</style>
