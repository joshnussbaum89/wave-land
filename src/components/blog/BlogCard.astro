---
import { Picture } from 'astro:assets'

export interface Props {
  slug: string
  title: string
  published: string
  image: ImageMetadata
  imageAlt: string
}

const { slug, title, published, image, imageAlt } = Astro.props
---

<article class="card">
  <a href={slug}>
    <Picture src={image} formats={['avif', 'webp']} alt={imageAlt} />
  </a>
  <div class="card-info">
    <p>{published}</p>
    <h2><a href={slug}>{title}</a></h2>
  </div>
</article>

<style>
  .card {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;

    & > a {
      display: block;
      width: 100%;
      height: 200px;
      object-fit: cover;
      overflow: hidden;
      border-radius: var(--border-radius-image);
    }

    & a {
      transition: all var(--transition-normal);
    }

    & a:hover {
      color: var(--color-primary-200);
    }

    & img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      border-radius: var(--border-radius-image);
      transition: all var(--transition-normal);

      &:hover {
        transform: scale(1.01);
      }
    }
  }

  .card-info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding: 0.5rem;

    & h2 {
      font-size: var(--size-xs);
      text-align: left;
    }

    @media (min-width: 768px) {
      & h2 {
        font-size: var(--size-sm);
      }
    }

    & p {
      font-size: var(--size-xxs);
      color: var(--color-grey-300);
    }
  }
</style>
